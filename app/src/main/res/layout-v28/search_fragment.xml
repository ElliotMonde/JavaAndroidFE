<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="14dp"
        android:backgroundTint="@color/lightred"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/back_search"
                    android:layout_width="18dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/white_back_arrow"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="220dp"
                    android:background="@drawable/white_input_box"
                    android:ellipsize="start"
                    android:paddingLeft="20dp"
                    android:hint="Search"
                    android:textSize="18sp"
                    android:importantForAutofill="no"
                    android:inputType="text"/>
            </LinearLayout>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/white_search_icon"
                />
        </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="Chocolate candy"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="Chocolate rhino"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textFontWeight="600"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp"
                        android:text="Chocolate dinosaur"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textFontWeight="600"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="16dp"
                        android:text="Youxiang Mudda"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
<!--            Insert recycler view here-->
        </LinearLayout>
<!--        <Button-->
<!--            android:id="@+id/searchButton"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Search" />-->
    </androidx.cardview.widget.CardView>

</LinearLayout>