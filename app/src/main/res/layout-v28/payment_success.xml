<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/header_payment"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/lightred">

        <TextView
            android:id="@+id/header_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/interfont"
            android:text="@string/successful"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="16dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/header_payment"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/payment_tick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/interfont"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="@string/payment_withheld"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/interfont"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/darkgray"
            android:text="You have been added to the following Group Buy."
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:fontFamily="@font/interfont"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/darkgray"
            android:text="You will not be charged until the order is successful."
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/lightred"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <LinearLayout
                android:id="@+id/listing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp"
                    android:elevation="8dp">
                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:elevation="8dp"
                        app:srcCompat="@drawable/test_kangol"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="14dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:text="Kangol Tote Bag"
                        android:fontFamily="@font/interfont"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        android:textSize="14sp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/seller"
                        android:text="KR Best Buys"
                        android:fontFamily="@font/interfont"
                        android:textColor="@color/white"
                        android:textSize="12sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:text="$20.00"
                        android:fontFamily="@font/interfont"
                        android:textColor="@color/white"
                        android:textSize="12sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:text="13 Days left"
                        android:fontFamily="@font/interfont"
                        android:textColor="@color/white"
                        android:textSize="12sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/order_quota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true">
                <LinearLayout
                    android:id="@+id/ordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currentorder"
                        android:text="27"
                        android:textColor="@color/white"
                        android:fontFamily="@font/interfont"
                        android:textFontWeight="800"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="22sp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/white"
                        android:fontFamily="@font/interfont"
                        android:textSize="22sp"
                        android:layout_marginLeft="2dp"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/minorder"
                        android:text="40"
                        android:textColor="@color/white"
                        android:fontFamily="@font/interfont"
                        android:textFontWeight="800"
                        android:textSize="22sp"
                        android:layout_marginHorizontal="2dp"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:fontFamily="@font/interfont"
                            android:textFontWeight="400"
                            android:textSize="14sp"
                            android:textColor="@color/white">
                        </TextView>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/people_alt_white"
                            android:layout_marginLeft="2dp"
                            >
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/viewOrder"
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/lightred"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/interfont"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:paddingVertical="10dp"
                android:text="@string/payment_vieworderbutton"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/backHome"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
            android:backgroundTint="@color/lightred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textFontWeight="400"
                android:fontFamily="@font/interfont"
                android:textSize="14sp"
                android:paddingVertical="10dp"
                android:text="@string/payment_homebutton"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="30dp"
            android:textFontWeight="600"
            android:fontFamily="@font/interfont"
            android:textSize="12sp"
            android:textColor="@color/darkgray"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Turn on your notifications and check your order status"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interfont"
            android:textFontWeight="600"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:text="You will be notified when the order is confirmed"
            android:textColor="@color/darkgray"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>