<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/order_landing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <!-- TODO: Change the image container to rounded corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="5dp"
            android:elevation="8dp">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:elevation="8dp"
                app:srcCompat="@drawable/test_kangol"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginHorizontal="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_name"
                android:text="Kangol Tote Bag"
                android:fontFamily="@font/interfont"
                android:textColor="@color/listing"
                android:textFontWeight="600"
                android:textSize="14sp"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_variant"
                android:text="Medium"
                android:fontFamily="@font/interfont"
                android:textColor="@color/listing"
                android:textSize="12sp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_quantity"
                android:text="Qty: 2"
                android:fontFamily="@font/interfont"
                android:textColor="@color/listing"
                android:textSize="12sp">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_status"
                    android:text="3 Days Left"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/interfont"
                    android:textColor="@color/lightred"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/order_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/interfont"
                    android:textSize="12sp"
                    android:textFontWeight="600"
                    android:text="$23.40"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:id="@+id/ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentorder"
                android:text="27"
                android:textColor="@color/lightred"
                android:fontFamily="@font/interfont"
                android:textFontWeight="800"
                android:layout_marginHorizontal="2dp"
                android:textSize="22sp"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/black"
                android:fontFamily="@font/interfont"
                android:textSize="22sp"
                android:layout_marginLeft="2dp"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minorder"
                android:text="40"
                android:textColor="@color/black"
                android:fontFamily="@font/interfont"
                android:textFontWeight="800"
                android:textSize="22sp"
                android:layout_marginHorizontal="2dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:fontFamily="@font/interfont"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:textColor="@color/black">
                </TextView>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/people_alt"
                    android:layout_marginLeft="2dp"
                    >
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>