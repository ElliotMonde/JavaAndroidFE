<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="0dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="-15dp"
            android:background="@null"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/red_back_arrow" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/Header"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:text="@string/manage_listing"
                android:textColor="@color/lightred"
                android:textSize="30sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/imageViewLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/listingImage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@color/lightgray"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/listingName"
                        style="@style/H3"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Product NaN"
                        android:textAlignment="textStart"
                        android:textColor="@color/listing" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/currentOrder"
                                    style="@style/H4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_margin="0dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:text="NaN"
                                    android:textColor="@color/listing"
                                    android:textStyle="bold" />

                                <TextView
                                    style="@style/H4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_margin="0dp"
                                    android:text=" /"
                                    android:textColor="@color/listing"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/minOrder"
                                    style="@style/H4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginRight="3dp"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:text="NaN"
                                    android:textColor="@color/listing"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom"
                                android:layout_margin="0dp"
                                android:padding="0dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/people" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/expiryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="0d left"
                            android:textAlignment="textStart"
                            android:textColor="@color/lightred" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/orderFulfilledCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginVertical="15dp"
                app:cardCornerRadius="30dp"
                app:strokeColor="@color/lightred"
                app:strokeWidth="1dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="13dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:id="@+id/fulfilImage"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:src="@drawable/error" />

                        <TextView
                            android:id="@+id/orderFulfilledText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/minimum_order_unmet"
                            android:textColor="@color/lightred" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/optionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/canvasLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/process_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/process_progress_1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/order_payment"

                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/finalise_group_order"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="@string/item_dispatched"
                            android:textAlignment="center"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text="@string/collect_items"
                            android:textAlignment="center"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/qr_code_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/qr_placeholder" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textAlignment="center"
                            android:textColor="@color/lightred"
                            android:textSize="50sp" />

                        <TextView
                            style="@style/H4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:text="Locker No."
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/expiryLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="45dp"
                            android:background="@color/stream_gray_dark"
                            android:orientation="vertical"
                            android:clickable="false"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:tintMode="src_in"
                                app:tint="@color/white"
                                android:layout_gravity="center"
                                android:src="@drawable/error"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:text="@string/expired"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>